{
  "source": [
    "properties/**/*.json"
  ],
  "platforms": {
    "flutter": {
      "transformGroup": "flutter-separate",
      "buildPath": "flutter/",
      "files": [{
        "className": "ColorPalette",
        "destination": "ColorPalette.dart",
        "format": "flutter/class.dart",
        "filter": {
          "attributes": {
            "category": "color"
          }
        }
      }, {
        "className": "Fonts",
        "destination": "Fonts.dart",
        "format": "flutter/class.dart",
        "filter": {
          "attributes": {
            "category": "font"
          }
        }
      }, {
        "className": "FontSizes",
        "destination": "FontSizes.dart",
        "format": "flutter/class.dart",
        "filter": {
          "attributes": {
            "category": "size",
            "type": "font"
          }
        }
      }]
    },
    "web": {
      "transformGroup": "web",
      "buildPath": "dist/",
      "files": [{
        "destination": "index.css",
        "format": "css/variables"
      }]
    }
  }
}