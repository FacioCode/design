{
  "component": {
    "linkButton": {
      "default": {
        "comment": "Styles applied to the root element if variant is link",
        "color": { "value": "{color.font.link.value}" }
      },
      "disabled": {
        "color": { "value": "{color.font.disabled.value}" }
      },
      "focusVisible": {
        "outlineWidth": { "value": "{size.base.none.value}" }
      },
      "hover": {
        "backgroundColor": { "value": "{color.base.transparent.00.value}" }
      },
      "pressed": {
        "backgroundColor": { "value": "{color.base.transparent.00.value}" },
        "color": { "value": "{color.font.linkPressed.value}" }
      }
    }
  }
}
